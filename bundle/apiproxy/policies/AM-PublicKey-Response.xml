<AssignMessage name='AM-PublicKey-Response'>
  <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
  <AssignVariable>
    <Name>nothing</Name>
    <Value/>
  </AssignVariable>
  <AssignVariable>
    <Name>regex</Name>
    <Value>(?m)^\s+</Value>
  </AssignVariable>
  <AssignVariable>
    <Name>payload</Name>
    <Template>{replaceAll(my_public_key,regex,nothing)}</Template>
  </AssignVariable>

  <Set>
    <Payload contentType='text/plain'>{payload}

</Payload>
    <StatusCode>200</StatusCode>
    <ReasonPhrase>OK</ReasonPhrase>
  </Set>
</AssignMessage>
